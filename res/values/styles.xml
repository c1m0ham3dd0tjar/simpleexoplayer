<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@drawable/background_app</item>
        <item name="android:windowFullscreen">true</item>
    </style>
    <style name="MaDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:width">200dp</item>
        <item name="android:height">300dp</item>
        <item name="android:gravity">center</item>
        <item name="android:windowBackground">@drawable/background_custom_layout</item>
    </style>
</resources>
